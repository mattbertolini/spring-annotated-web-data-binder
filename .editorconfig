root = true

[*]
charset = utf-8
end_of_line = lf

[*.{java,gradle,gradle.kts}]
indent_size = 4
indent_style = space
insert_final_newline = true

[*.java]
ij_java_class_count_to_use_import_on_demand = 999
ij_java_names_count_to_use_import_on_demand = 999

[*.{bat,cmd}]
end_of_line = crlf

[*.adoc]
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 4
indent_style = space
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2
