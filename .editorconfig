root = true

[*]
charset = utf-8
end_of_line = lf

[*.{java,gradle}]
indent_size = 4
indent_style = space
insert_final_newline = true

[*.{bat,cmd}]
end_of_line = crlf

[*.adoc]
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 4
indent_style = space
trim_trailing_whitespace = false